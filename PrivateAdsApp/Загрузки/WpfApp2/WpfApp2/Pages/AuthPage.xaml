<Page x:Class="WpfApp2.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация">
    <Grid HorizontalAlignment="Center" Width="600" Height="350">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Логин" />
            <TextBox x:Name="TextBoxLogin" ToolTip="Введите логин" />

            <TextBlock Text="Пароль" Margin="0,8,0,0"/>
            <PasswordBox x:Name="PasswordBox" ToolTip="Введите пароль"/>

            <Button x:Name="ButtonEnter" Content="Вход" Click="ButtonEnter_OnClick" Margin="0,12,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                <Button Content="Регистрация" Click="ButtonReg_Click" Margin="0,0,8,0"/>
                <Button Content="Смена пароля" Click="ButtonChangePassword_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
