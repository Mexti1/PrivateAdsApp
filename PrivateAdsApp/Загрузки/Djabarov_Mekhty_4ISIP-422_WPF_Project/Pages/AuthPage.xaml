<Page x:Class="Djabarov_Mekhty_4ISIP_422.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация">
    <Grid HorizontalAlignment="Center" Width="600" Height="320">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="380">
            <Label Content="Логин"/>
            <TextBox x:Name="TextBoxLogin" Height="30" />
            <Label Content="Пароль" Margin="0,8,0,0"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>
            <Button x:Name="ButtonEnter" Content="Вход" Click="ButtonEnter_OnClick" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="ButtonReg" Content="Регистрация" Click="ButtonReg_Click"/>
                <Button x:Name="ButtonChangePassword" Content="Смена пароля" Click="ButtonChangePassword_Click"/>
            </StackPanel>
            <TextBlock x:Name="txtStatus" Text="" Foreground="Red" TextAlignment="Center" Margin="0,6,0,0"/>
        </StackPanel>

    </Grid>
</Page>
