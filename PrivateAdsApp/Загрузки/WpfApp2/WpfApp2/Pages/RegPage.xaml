<Page x:Class="WpfApp2.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">
    <Grid HorizontalAlignment="Center" Width="600" Height="450">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="420">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="txtbxLog" />

            <TextBlock Text="Пароль" Margin="0,8,0,0"/>
            <PasswordBox x:Name="passBxFrst"/>

            <TextBlock Text="Повторите пароль" Margin="0,8,0,0"/>
            <PasswordBox x:Name="passBxScnd"/>

            <TextBlock Text="Роль" Margin="0,8,0,0"/>
            <ComboBox x:Name="comboBxRole" SelectedIndex="0">
                <ComboBoxItem Content="User"/>
                <ComboBoxItem Content="Admin"/>
            </ComboBox>

            <TextBlock Text="ФИО" Margin="0,8,0,0"/>
            <TextBox x:Name="txtbxFIO"/>

            <Button x:Name="regButton" Content="Зарегистрироваться" Click="regButton_Click" Margin="0,12,0,0"/>
        </StackPanel>
    </Grid>
</Page>
