<Page x:Class="Djabarov_Mekhty_4ISIP_422.Pages.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Смена пароля">
    <Grid HorizontalAlignment="Center" Width="600" Height="320">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="420">
            <Label Content="Логин"/>
            <TextBox x:Name="TbLogin" Height="30"/>
            <Label Content="Текущий пароль" Margin="0,8,0,0"/>
            <PasswordBox x:Name="CurrentPasswordBox" Height="30"/>
            <Label Content="Новый пароль" Margin="0,8,0,0"/>
            <PasswordBox x:Name="NewPasswordBox" Height="30"/>
            <Label Content="Подтвердите новый пароль" Margin="0,8,0,0"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="30"/>
            <Button Content="Сохранить" Click="ButtonSave_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
