<Page x:Class="WpfApp3.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="380">
            <TextBlock Text="Регистрация" FontSize="18" Margin="0,0,0,10" HorizontalAlignment="Center"/>

            <TextBlock Text="Логин"/>
            <TextBox x:Name="txtbxLog"/>

            <TextBlock Text="Пароль" Margin="0,6,0,0"/>
            <PasswordBox x:Name="passBxFrst"/>

            <TextBlock Text="Повторите пароль" Margin="0,6,0,0"/>
            <PasswordBox x:Name="passBxScnd"/>

            <TextBlock Text="Роль" Margin="0,6,0,0"/>
            <ComboBox x:Name="comboBxRole">
                <ComboBoxItem Content="User" />
                <ComboBoxItem Content="Admin" />
            </ComboBox>

            <TextBlock Text="ФИО" Margin="0,6,0,0"/>
            <TextBox x:Name="txtbxFIO"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button Content="Зарегистрироваться" Click="regButton_Click" Width="150" Margin="6"/>
                <Button Content="Отмена" Click="Cancel_Click" Width="100" Margin="6"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
