<Window x:Class="AdsClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Объявления" Height="720" Width="1250" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Top">
            <TextBox x:Name="txtSearch" Width="300" Height="28" Margin="0,0,8,0" />
            <ComboBox x:Name="cbCity" Width="160" Height="28" Margin="0,0,8,0" DisplayMemberPath="Name" SelectedValuePath="CityId" />
            <ComboBox x:Name="cbCategory" Width="160" Height="28" Margin="0,0,8,0" DisplayMemberPath="Name" SelectedValuePath="CategoryId" />
            <ComboBox x:Name="cbType" Width="140" Height="28" Margin="0,0,8,0" DisplayMemberPath="Name" SelectedValuePath="AdTypeId" />
            <ComboBox x:Name="cbStatus" Width="140" Height="28" Margin="0,0,8,0" DisplayMemberPath="Name" SelectedValuePath="AdStatusId" />
            <Button Content="Найти" Width="80" Click="BtnSearch_Click" />
            <Button Content="Добавить" Width="90" Click="BtnAdd_Click" Margin="8,0,0,0" />
            <Button Content="Мои завершённые" Width="140" Click="BtnCompleted_Click" Margin="8,0,0,0"/>
            <TextBlock Text="{Binding Path=CurrentUserText}" Margin="16,4,0,0" HorizontalAlignment="Right" />
        </StackPanel>

        <ListView x:Name="lvAds" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="6" Margin="2">
                        <DockPanel>
                            <Image Width="120" Height="90" Source="{Binding MainImage}" DockPanel.Dock="Left" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding CategoryName}" />
                                <TextBlock Text="{Binding CityName}" />
                                <TextBlock Text="{Binding PriceText}" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding ShortDescription}" TextWrapping="Wrap" MaxWidth="820"/>
                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <Button Content="Открыть" Click="BtnOpen_Click" Tag="{Binding AdId}" Margin="0,0,6,0"/>
                                    <Button Content="Редактировать" Click="BtnEdit_Click" Tag="{Binding AdId}" Margin="0,0,6,0"/>
                                    <Button Content="Удалить" Click="BtnDelete_Click" Tag="{Binding AdId}" Margin="0,0,6,0"/>
                                    <Button Content="Завершить" Click="BtnComplete_Click" Tag="{Binding AdId}" Margin="0,0,6,0"/>
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</Window>
