<Window x:Class="PrivateAdsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сервис частных объявлений" Height="700" Width="1200" WindowStartupLocation="CenterScreen"
        >
    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF2196F3" Margin="0,0,0,10">
            <!--<Image Source="/Resources/logo.png" Width="60" Margin="20,10"/>-->
            <TextBlock Text="Сервис частных объявлений" Foreground="White" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button x:Name="BtnLogin" Content="Войти" Width="100" Height="40" Margin="600,0,10,0" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" Click="BtnLogin_Click"/>
        </StackPanel>

        <!-- Фильтры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <TextBox x:Name="TxtSearch" Width="300" Height="30" Margin="5"/>
            <ComboBox x:Name="CmbCity" Width="150" Margin="5" DisplayMemberPath="CityName"/>
            <ComboBox x:Name="CmbCategory" Width="150" Margin="5" DisplayMemberPath="CategoryName"/>
            <ComboBox x:Name="CmbType" Width="120" Margin="5" DisplayMemberPath="TypeName"/>
            <ComboBox x:Name="CmbStatus" Width="120" Margin="5" DisplayMemberPath="StatusName"/>
            <Button Content="Поиск" Width="100" Height="30" Margin="5" Click="BtnSearch_Click"/>
        </StackPanel>

        <!-- Список объявлений -->
        <ListView x:Name="LvAds" Grid.Row="1" Margin="20" ItemsSource="{Binding}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Фото" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding PhotoPath, FallbackValue=/Resources/no-photo.jpg}" Width="100" Height="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Заголовок" DisplayMemberBinding="{Binding Title}" Width="250"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price}" Width="100"/>
                    <GridViewColumn Header="Город" DisplayMemberBinding="{Binding City.CityName}" Width="120"/>
                    <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding Category.CategoryName}" Width="120"/>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding PostDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>