<Window x:Class="PrivateAdsApp.Windows.AdEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление / Редактирование объявления" 
        Height="650" Width="700" WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="{StaticResource SurfaceColor}"
                CornerRadius="8"
                Margin="30"
                Padding="40">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" BlurRadius="15" Opacity="0.2" Direction="270"/>
            </Border.Effect>
            <StackPanel>
                <!-- Заголовок -->
                <Border Background="{StaticResource PrimaryColor}"
                        CornerRadius="4"
                        Padding="0,15"
                        Margin="0,0,0,30">
                    <TextBlock Text="Добавление / Редактирование объявления"
                              FontSize="22"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                </Border>

                <!-- Заголовок объявления -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Заголовок объявления"
                              Style="{StaticResource LabelTextBlock}"/>
                    <TextBox x:Name="TxtTitle"
                            Height="40"
                            Style="{StaticResource ModernTextBox}"/>
                </StackPanel>

                <!-- Описание -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Описание"
                              Style="{StaticResource LabelTextBlock}"/>
                    <TextBox x:Name="TxtDescription"
                            Height="120"
                            Style="{StaticResource ModernMultilineTextBox}"/>
                </StackPanel>

                <!-- Цена -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Цена (руб.)"
                              Style="{StaticResource LabelTextBlock}"/>
                    <TextBox x:Name="TxtPrice"
                            Height="40"
                            Style="{StaticResource ModernTextBox}"/>
                </StackPanel>

                <!-- Город и Категория в одной строке -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Город"
                                  Style="{StaticResource LabelTextBlock}"/>
                        <ComboBox x:Name="CmbCity"
                                 Height="40"
                                 Style="{StaticResource ModernComboBox}"
                                 DisplayMemberPath="CityName"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Категория"
                                  Style="{StaticResource LabelTextBlock}"/>
                        <ComboBox x:Name="CmbCategory"
                                 Height="40"
                                 Style="{StaticResource ModernComboBox}"
                                 DisplayMemberPath="CategoryName"/>
                    </StackPanel>
                </Grid>

                <!-- Тип и Статус в одной строке -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Тип объявления"
                                  Style="{StaticResource LabelTextBlock}"/>
                        <ComboBox x:Name="CmbType"
                                 Height="40"
                                 Style="{StaticResource ModernComboBox}"
                                 DisplayMemberPath="TypeName"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Статус"
                                  Style="{StaticResource LabelTextBlock}"/>
                        <ComboBox x:Name="CmbStatus"
                                 Height="40"
                                 Style="{StaticResource ModernComboBox}"
                                 DisplayMemberPath="StatusName"/>
                    </StackPanel>
                </Grid>

                <!-- Кнопки -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Сохранить"
                           Grid.Column="0"
                           Height="45"
                           Margin="0,0,10,0"
                           Style="{StaticResource PrimaryButton}"
                           Click="BtnSave_Click"/>
                    <Button Content="Отмена"
                           Grid.Column="1"
                           Height="45"
                           Margin="10,0,0,0"
                           Style="{StaticResource SecondaryButton}"
                           IsCancel="True"/>
                </Grid>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>