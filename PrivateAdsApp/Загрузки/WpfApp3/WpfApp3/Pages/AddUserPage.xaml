<Page x:Class="WpfApp3.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавление/Редактирование пользователя">
    <Grid>
        <StackPanel Width="380" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="TitleText" FontSize="16" Margin="0,0,0,10" Text="Добавление пользователя" HorizontalAlignment="Center"/>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="txtLogin"/>

            <TextBlock Text="Пароль" Margin="0,6,0,0"/>
            <PasswordBox x:Name="txtPassword"/>

            <TextBlock Text="Роль" Margin="0,6,0,0"/>
            <ComboBox x:Name="comboRole">
                <ComboBoxItem Content="User"/>
                <ComboBoxItem Content="Admin"/>
            </ComboBox>

            <TextBlock Text="ФИО" Margin="0,6,0,0"/>
            <TextBox x:Name="txtFIO"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button Content="Сохранить" Click="Save_Click" Width="120" Margin="6"/>
                <Button Content="Отмена" Click="Cancel_Click" Width="100" Margin="6"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
