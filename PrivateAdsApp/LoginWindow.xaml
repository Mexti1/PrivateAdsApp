<Window x:Class="PrivateAdsApp.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="450" Width="550" WindowStartupLocation="CenterScreen"
        >
    <Grid Background="{StaticResource BackgroundColor}">
        <Border Background="{StaticResource SurfaceColor}"
                CornerRadius="8"
                Margin="40"
                Padding="40,30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                MinWidth="400">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" BlurRadius="20" Opacity="0.25" Direction="270"/>
            </Border.Effect>
            <StackPanel>
                <!-- Заголовок -->
                <Border Background="{StaticResource SurfaceColor}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,0,0,2"
                        Padding="0,15"
                        Margin="0,0,0,30">
                    <TextBlock Text="Вход в систему"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="{StaticResource TextPrimaryColor}"
                              HorizontalAlignment="Center"/>
                </Border>

                <!-- Логин -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Логин:"
                              Style="{StaticResource LabelTextBlock}"/>
                    <TextBox x:Name="TxtLogin"
                            Height="40"
                            Style="{StaticResource ModernTextBox}"/>
                </StackPanel>

                <!-- Пароль -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Пароль:"
                              Style="{StaticResource LabelTextBlock}"/>
                    <PasswordBox x:Name="TxtPassword"
                                Height="40"
                                PasswordChar="●"
                                Style="{StaticResource ModernPasswordBox}"/>
                </StackPanel>

                <!-- Кнопки -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Войти"
                           Grid.Column="0"
                           Height="45"
                           Margin="0,0,10,0"
                           Style="{StaticResource PrimaryButton}"
                           Click="BtnLogin_Click"/>
                    <Button Content="Отмена"
                           Grid.Column="1"
                           Height="45"
                           Margin="10,0,0,0"
                           Style="{StaticResource SecondaryButton}"
                           IsCancel="True"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>