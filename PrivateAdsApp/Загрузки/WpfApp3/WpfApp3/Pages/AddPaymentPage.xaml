<Page x:Class="WpfApp3.Pages.AddPaymentPage"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Платеж">
    <Grid>
        <StackPanel Width="420" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="TitleText" Text="Добавление платежа" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>

            <TextBlock Text="Категория"/>
            <ComboBox x:Name="comboCategory"/>

            <TextBlock Text="Пользователь" Margin="0,6,0,0"/>
            <ComboBox x:Name="comboUser"/>

            <TextBlock Text="Дата" Margin="0,6,0,0"/>
            <DatePicker x:Name="datePicker" SelectedDate="{x:Static sys:DateTime.Now}" />

            <TextBlock Text="Название" Margin="0,6,0,0"/>
            <TextBox x:Name="txtName"/>

            <TextBlock Text="Количество" Margin="0,6,0,0"/>
            <TextBox x:Name="txtNum"/>

            <TextBlock Text="Цена" Margin="0,6,0,0"/>
            <TextBox x:Name="txtPrice"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button Content="Сохранить" Click="Save_Click" Width="120" Margin="6"/>
                <Button Content="Отмена" Click="Cancel_Click" Width="100" Margin="6"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
