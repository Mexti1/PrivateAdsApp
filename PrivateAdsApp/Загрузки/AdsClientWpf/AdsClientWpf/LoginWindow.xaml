<Window x:Class="AdsClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="260" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="20" FontWeight="Bold" Text="Вход в систему" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,8,0,0">
            <Label Content="Логин"/>
            <TextBox x:Name="txtLogin" />
            <Label Content="Пароль" Margin="0,8,0,0"/>
            <PasswordBox x:Name="pbPassword" />
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Войти" Width="90" Click="BtnLogin_Click" Margin="0,0,8,0"/>
            <Button Content="Отмена" Width="90" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
