<Window x:Class="PrivateAdsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сервис частных объявлений" Height="700" Width="1200" WindowStartupLocation="CenterScreen"
        >
    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceColor}" Padding="20,15" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,2">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="12" Opacity="0.2" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Resources/vozvrat-tovara.png" Width="60" Margin="0,0,20,0" Grid.Column="0"/>
                <TextBlock Text="Сервис частных объявлений"
                          Style="{StaticResource HeaderTextBlock}"
                          Grid.Column="1"
                          HorizontalAlignment="Left"/>
                <Button x:Name="BtnLogin"
                       Content="Войти"
                       Width="120"
                       Height="40"
                       Grid.Column="2"
                       Style="{StaticResource PrimaryButton}"
                       Click="BtnLogin_Click"/>
            </Grid>
        </Border>

        <!-- Фильтры -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceColor}"
                Padding="20,15"
                Margin="20,20,20,0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="8" Opacity="0.1" Direction="270"/>
            </Border.Effect>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox x:Name="TxtSearch"
                        Width="300"
                        Height="35"
                        Margin="5"
                        Style="{StaticResource ModernTextBox}"
                        Tag="Поиск по названию..."/>
                <ComboBox x:Name="CmbCity"
                         Width="150"
                         Height="35"
                         Margin="5"
                         Style="{StaticResource ModernComboBox}"
                         DisplayMemberPath="CityName"/>
                <ComboBox x:Name="CmbCategory"
                         Width="150"
                         Height="35"
                         Margin="5"
                         Style="{StaticResource ModernComboBox}"
                         DisplayMemberPath="CategoryName"/>
                <ComboBox x:Name="CmbType"
                         Width="130"
                         Height="35"
                         Margin="5"
                         Style="{StaticResource ModernComboBox}"
                         DisplayMemberPath="TypeName"/>
                <ComboBox x:Name="CmbStatus"
                         Width="130"
                         Height="35"
                         Margin="5"
                         Style="{StaticResource ModernComboBox}"
                         DisplayMemberPath="StatusName"/>
                <Button Content="Поиск"
                       Width="110"
                       Height="35"
                       Margin="5"
                       Style="{StaticResource PrimaryButton}"
                       Click="BtnSearch_Click"/>
            </WrapPanel>
        </Border>

        <!-- Список объявлений -->
        <ListView x:Name="LvAds"
                 Grid.Row="2"
                 Margin="20"
                 Style="{StaticResource ModernListView}"
                 ItemsSource="{Binding}"
                 ItemContainerStyle="{StaticResource ModernListViewItem}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Фото" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid Width="100" Height="100">
                                    <Border CornerRadius="4" ClipToBounds="True">
                                        <Image Source="{Binding PhotoPath, FallbackValue=/Resources/vozvrat-tovara.png}"
                                              Stretch="UniformToFill"/>
                                    </Border>
                                    <!-- Иконка категории -->
                                    <Border Width="30" Height="30"
                                           CornerRadius="15"
                                           Background="White"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Bottom"
                                           Margin="0,0,5,5">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.3"/>
                                        </Border.Effect>
                                        <Image Width="20" Height="20"
                                              Source="/Resources/icon-electronics.png"
                                              Stretch="Uniform"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Заголовок" DisplayMemberBinding="{Binding Title}" Width="280"/>
                    <GridViewColumn Header="Цена" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Price, StringFormat={}{0:N0} ₽}"
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource SuccessColor}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Город" DisplayMemberBinding="{Binding City.CityName}" Width="120"/>
                    <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding Category.CategoryName}" Width="140"/>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding PostDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>