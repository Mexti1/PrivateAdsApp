<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное окно" Height="600" Width="900"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <DockPanel Grid.Row="0" LastChildFill="True">
            <Button x:Name="BackButton" Content="Назад" Width="80" Margin="6" Click="BackButton_Click" HorizontalAlignment="Left"/>
            <TextBlock Text="WpfApp2" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </DockPanel>

        <!-- Frame для страниц -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>

        <!-- Нижняя панель -->
        <DockPanel Grid.Row="2">
            <TextBlock x:Name="DateTimeNow" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>
