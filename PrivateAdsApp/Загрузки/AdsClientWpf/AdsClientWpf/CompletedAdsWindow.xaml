<Window x:Class="AdsClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Завершённые объявления" Height="600" Width="800" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Обновить" Click="BtnRefresh_Click" Width="90"/>
            <TextBlock Text="Всего получено:" Margin="12,6,0,0" />
            <TextBlock x:Name="tbTotal" FontWeight="Bold" Margin="6,6,0,0" />
        </StackPanel>

        <ListView x:Name="lvCompleted">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding AdId}" Width="50" />
                    <GridViewColumn Header="Заголовок" DisplayMemberBinding="{Binding Title}" Width="300" />
                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding SaleAmount}" Width="100" />
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding SaleDate}" Width="200" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
