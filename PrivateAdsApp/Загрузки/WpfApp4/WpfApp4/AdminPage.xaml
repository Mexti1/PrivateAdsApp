<Page x:Class="WpfApp4.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Страница администратора">
    <Grid>
        <TabControl>
            <TabItem Header="Пользователи">
                <DataGrid x:Name="UsersGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="Категории">
                <StackPanel>
                    <DataGrid x:Name="CategoriesGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
                    <Button x:Name="AddCategoryButton" Content="Добавить категорию" Click="AddCategory_Click" Margin="5"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Платежи">
                <DataGrid x:Name="PaymentsGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button x:Name="DiagramButton" Content="Диаграмма" Click="Diagram_Click" Margin="5"/>
            <Button x:Name="ExportWordButton" Content="Экспорт в Word" Click="ExportWord_Click" Margin="5"/>
            <Button x:Name="ExportExcelButton" Content="Экспорт в Excel" Click="ExportExcel_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>