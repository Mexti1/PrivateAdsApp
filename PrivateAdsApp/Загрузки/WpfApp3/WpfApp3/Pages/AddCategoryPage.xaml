<Page x:Class="WpfApp3.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Категория">
    <Grid>
        <StackPanel Width="360" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="TitleText" Text="Добавление категории" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <TextBlock Text="Название"/>
            <TextBox x:Name="txtName"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button Content="Сохранить" Click="Save_Click" Width="120" Margin="6"/>
                <Button Content="Отмена" Click="Cancel_Click" Width="100" Margin="6"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
