<Page x:Class="WpfApp3.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Логин" />
            <TextBox x:Name="txtLogin"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="txtPass"/>

            <TextBlock Text="Введите капчу:" Margin="0,10,0,0"/>
            <Border Background="#EEE" Padding="5" Margin="5">
                <TextBlock x:Name="CaptchaText" FontSize="20" FontWeight="Bold"/>
            </Border>
            <TextBox x:Name="CaptchaInput" PlaceholderText="Введите текст"/>

            <Button Content="Войти" Click="Login_Click" Margin="0,10,0,0"/>
            <Button Content="Регистрация" Click="Reg_Click"/>
        </StackPanel>
    </Grid>
</Page>
