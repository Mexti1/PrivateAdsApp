<Page x:Class="WpfApp4.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" Width="800" Height="450" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*"/>
            <ColumnDefinition Width="529*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="217*"/>
            <RowDefinition Height="233*"/>
        </Grid.RowDefinitions>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="173,140,0,0" VerticalAlignment="Top" Width="64" x:Name="labelLogin"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="173,188,0,0" VerticalAlignment="Top" Width="64" x:Name="labelPass" Grid.RowSpan="2"/>
        <TextBox x:Name="TextBoxLogin" Background="Transparent" Margin="62,0,0,75" TextWrapping="Wrap" ToolTip="Введите логин или почту"
                 TextChanged="TextBoxLogin_TextChanged" Height="34" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="134" Grid.Column="1"/>
        <PasswordBox x:Name="PasswordBox" Background="Transparent" ToolTip="Введите пароль" Margin="0,0,333,0"
                     HorizontalAlignment="Right" Width="134" Height="32" VerticalAlignment="Bottom" Grid.Column="1"
                     PasswordChanged="PasswordBox_PasswordChanged"/>
        <Button x:Name="ButtonEnter" Margin="69,20,0,0" Height="34" Content="Вход" ToolTip="Кнопка входа" Grid.Row="1"
                HorizontalAlignment="Left" Width="120" VerticalAlignment="Top" Grid.Column="1" Click="ButtonEnter_Click"/>
        <Button x:Name="ButtonReg" Margin="69,68,0,0" Height="37" Content="Регистрация" ToolTip="Кнопка регистрации" Grid.Row="1"
                HorizontalAlignment="Left" Width="120" VerticalAlignment="Top" Grid.Column="1" Click="ButtonReg_Click"/>
        <Button x:Name="ButtonChangePassword" Margin="69,120,0,0" Height="37" Content="Смена пароля" ToolTip="Кнопка смены пароля" Grid.Row="1"
                HorizontalAlignment="Left" Width="120" VerticalAlignment="Top" Grid.Column="1" Click="ButtonChangePassword_Click"/>
        <!-- Капча элементы (hidden по умолчанию) -->
        <TextBox Grid.Column="1" Visibility="Hidden" x:Name="captcha" Height="42" Foreground="Red" FontStyle="Italic" FontWeight="Heavy"
                 VerticalAlignment="Top" Width="156" Background="{x:Null}" FontStretch="UltraCondensed" IsReadOnly="True"
                 HorizontalContentAlignment="Center" HorizontalAlignment="Right" Margin="0,96,322,0" VerticalContentAlignment="Center" FontSize="20"
                 CommandManager.PreviewExecuted="textBox_PreviewExecuted" ContextMenu="{x:Null}"/>
        <TextBox Grid.Column="1" Visibility="Hidden" x:Name="captchaInput" HorizontalAlignment="Left" Height="34" Margin="49,183,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <Button x:Name="submitCaptcha" Margin="69,20,0,0" Visibility="Hidden" Height="34" Content="Подтвердить"
                ToolTip="Подтвердить ввод капчи" Grid.Row="1" HorizontalAlignment="Left" Width="120" VerticalAlignment="Top" Grid.Column="1" Click="submitCaptcha_Click"/>
        <Label Content="Капча:" x:Name="labelCaptcha" Margin="178,104,0,87" HorizontalAlignment="Left" Width="54" Visibility="Hidden"/>
    </Grid>
</Page>